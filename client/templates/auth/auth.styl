.auth-page {
    background-image url("img/auth-bg.jpg")
    background-color #82d0c8
    background-position 90px 0
    background-size auto 100%
    background-repeat no-repeat
    width 100%
    height 100%
    color #fff
}

.auth-page-header {
    font-weight bold
    text-align center
    padding-top 13vh

    &__logo {
        margin 0
        font-size 1.5em
    }
    &__description {
        margin 0
        font-size 1.5em
    }
}

.auth-page-login {
    padding-top: 9vh;

    &__title {
        font-size 1.17em
        font-weight bold
        text-align center
    }
}

.social-buttons {
    text-align center
    &__button {
        width 15vw
        height 15vw
        box-shadow 0 -.6vw 2.5vw rgba(0,0,0,0.12)
        margin 0 1vw

        &_vk {
            background url("img/social_vk.png") center no-repeat #7795c4
            background-size 60%
            transition all .3s
            &:hover {
                background-color lighten(#7795c4, 10%);
            }
        }
        &_fb {
            background url("img/social_fb.png") center no-repeat #516191
            background-size 27%
            &:hover {
                background-color lighten(#516191, 10%);
            }
        }
        &_gl {
            background url("img/social_gl.png") center no-repeat #e16d4d
            background-size 44%
            &:hover {
                background-color lighten(#e16d4d, 10%);
            }
        }
    }
}
